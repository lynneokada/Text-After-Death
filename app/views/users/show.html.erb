<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>

      <!-- RECEIVERS -->
      <% if @user.receivers.count > 0 %>

      <%= render :partial => "messages/form" %>

      <% else %>

      <p>You don't have any Reveivers yet. <%= link_to "Add a new one", :controller => 'receivers', :action => 'new' %>?

        <% end %>
        <!-- END RECEIVERS -->

      </section>
    </aside>

    <!-- MESSAGES -->
    <div id="my-messages">
      <% if @user.messages.count > 0 %>
      <div>
        <%= render :partial => "messages/all_messages", object: @messages %>
      </div>
      <% end %>
    </div>
    <!-- END MESSAGES -->

  </div>
