<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="user-type">
    <%= f.label :user_type, class: 'form-control' %>
    <%= radio_button_tag(:user_type, "Sender")  %>
    <%= label_tag(:user_type_sender, "I am a Sender")  %>
    <%= radio_button_tag(:user_type, "Receiver")  %>
    <%= label_tag(:user_type_receiver, "I am a Receiver")  %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirmation_password %><br>
    <%= f.password_field :confirmation_password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
