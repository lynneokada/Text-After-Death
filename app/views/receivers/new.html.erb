<div class="center jumbotron">
    <h1>Start Receiving</h1>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@receiver) do |f| %>

        <div class="field">
          <%= f.label :sender_name %>
          <%= f.text_field :sender_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :phonenumber %>
          <%= f.text_field :phonenumber, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :private_key %>
          <%= f.password_field :private_key, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

      <% end %>
    </div>
  </div>
</div>
